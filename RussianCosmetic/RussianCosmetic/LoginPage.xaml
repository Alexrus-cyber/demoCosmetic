<Page x:Class="RussianCosmetic.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RussianCosmetic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Grid.Row="1">
            <StackPanel Margin="20" HorizontalAlignment="Center"  Orientation="Horizontal">
                <TextBlock Width="50">Логин</TextBlock>
                <TextBox Text="Ivanov@namecomp.ru" Width="200" Height="40" x:Name="Login"></TextBox>
            </StackPanel>
            <StackPanel Margin="20" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Width="50">Пароль</TextBlock>
                <TextBox Text="2L6KZG" Width="200" Height="40" x:Name="Password"></TextBox>
            </StackPanel>
            <Button Height="40" Margin="50,0,0,0" Width="200" Name="LoginBtn" Click="LoginBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
